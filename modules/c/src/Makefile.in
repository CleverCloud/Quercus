SHELL=@SHELL@
srcdir = @srcdir@
top_srcdir = @top_srcdir@
plugins=@plugins@

all	: plugins

plugins	:
	for dir in $(plugins); do (cd $$dir; $(MAKE)); done

clean	:
	for dir in common apache2 $(plugins); do \
	  (cd $$dir; $(MAKE) clean); \
        done

install	:
	for dir in $(plugins); do (cd $$dir; $(MAKE) install); done

